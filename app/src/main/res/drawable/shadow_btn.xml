<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="false">
        <layer-list>
            <!-- SHADOW -->
            <item>
                <shape>
                    <solid android:color="#25000000"/>
                    <corners android:topLeftRadius="20dp"
                        android:topRightRadius="20dp"
                        android:bottomLeftRadius="20dp"
                        android:bottomRightRadius="20dp"/>
                </shape>
            </item>

            <item
                android:bottom="10px"
                android:right="5px"
                >
                <shape>
                    <padding android:bottom="10dp"/>
                    <gradient
                        android:startColor="#f7b733"
                        android:endColor="#fc4a1a"
                        android:angle="270" />
                    <corners
                        android:radius="20dp"/>
                    <padding
                        android:left="5dp"
                        android:top="5dp"
                        android:right="5dp"
                        android:bottom="10dp"/>
                    <stroke android:color="#FFE4BC"
                        android:width="2dp"/>
                </shape>
            </item>
        </layer-list>
    </item>

    <item android:state_pressed="true">
        <layer-list>
            <!-- SHADOW -->
            <item>
                <shape>
                    <solid android:color="#1E000000"/>
                    <corners android:radius="20dp"/>

                </shape>
            </item>
            <!-- BUTTON -->
            <item android:bottom="5px">
                <shape>
                    <padding android:bottom="5dp"/>
                    <gradient
                        android:startColor="#fc4a1a"
                        android:endColor="#f7b733"
                        android:angle="270" />
                    <corners
                        android:radius="20dp"/>
                    <padding
                        android:left="5dp"
                        android:right="5dp"
                        android:top="5dp"
                        android:bottom="10dp"/>

                </shape>
            </item>
        </layer-list>
    </item>
</selector>